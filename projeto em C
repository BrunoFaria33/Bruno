#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>
#include <locale.h>

/* -------------------------------------------------------------------------------
   ESTRUTURA DE DADOS — Funcionário
-------------------------------------------------------------------------------- */
typedef struct {
    char nome[50];
    char cargo[30];
    char depto[30];
    char status;    // ' ' = ativo | '*' = excluído logicamente
} reg;

/* Protótipos */
void configurar_locale(void);
void limpa_buffer(void);
void ler_string(char *s, int tam);
int tamanho(FILE *arq);
void cadastrar(FILE *arq);
void consultar(FILE *arq);
void gerar_arquivo_texto(FILE *arq);
void excluir(FILE *arq);

/* -------------------------------------------------------------------------------- */
void limpa_buffer(void) {
    int c;
    while ((c = getchar()) != '\n' && c != EOF);
}

/* -------------------------------------------------------------------------------- */
void ler_string(char *s, int tam) {
    fgets(s, tam, stdin);
    s[strcspn(s, "\n")] = '\0';
}

/* -------------------------------------------------------------------------------- */
int tamanho(FILE *arq) {
    long pos = ftell(arq);
    fseek(arq, 0, SEEK_END);
    long fim = ftell(arq);
    fseek(arq, pos, SEEK_SET);
    return (int)(fim / sizeof(reg));
}

/* ====================================================================================
   Cadastrar Funcionário
   ==================================================================================== */
void cadastrar(FILE *arq) {
    reg func;
    func.status = ' ';
    char confirma;

    printf("\n=== CADASTRAR FUNCIONÁRIO ===\n");
    printf("Registro número: %d\n", tamanho(arq) + 1);

    printf("Nome: ");
    ler_string(func.nome, sizeof(func.nome));

    printf("Cargo: ");
    ler_string(func.cargo, sizeof(func.cargo));

    printf("Departamento: ");
    ler_string(func.depto, sizeof(func.depto));

    printf("Confirmar cadastro (s/n)? ");
    if (scanf("%c", &confirma) != 1) {
        printf("Entrada inválida.\n");
        limpa_buffer();
        return;
    }
    limpa_buffer();

    if (toupper(confirma) == 'S') {
        fseek(arq, 0, SEEK_END);
        fwrite(&func, sizeof(reg), 1, arq);
        fflush(arq);
        printf("Funcionário cadastrado com sucesso!\n");
    } else {
        printf("Cadastro cancelado.\n");
    }
}

/* ====================================================================================
   Consultar Funcionário
   ==================================================================================== */
void consultar(FILE *arq) {
    int nr;
    reg func;

    printf("\nCódigo do funcionário: ");
    if (scanf("%d", &nr) != 1) {
        printf("Entrada inválida!\n");
        limpa_buffer();
        return;
    }
    limpa_buffer();

    int total = tamanho(arq);
    if (nr <= 0 || nr > total) {
        printf("Código inválido! Total = %d\n", total);
        return;
    }

    long pos = (long)(nr - 1) * sizeof(reg);
    fseek(arq, pos, SEEK_SET);

    if (fread(&func, sizeof(reg), 1, arq) != 1) {
        printf("Erro ao ler registro!\n");
        return;
    }

    printf("\n=== FUNCIONÁRIO (CÓDIGO %d) ===\n", nr);

    if (func.status == '*')
        printf("Status: EXCLUÍDO\n");

    printf("Nome........: %s\n", func.nome);
    printf("Cargo.......: %s\n", func.cargo);
    printf("Departamento: %s\n", func.depto);
}

/* ====================================================================================
   Gerar Relatório de Funcionários (.txt)
   ==================================================================================== */
void gerar_arquivo_texto(FILE *arq) {
    char nomearq[80];
    reg func;
    int i, total;
    char status_str[10];

    printf("\nGerar arquivo texto\n");
    printf("Nome do arquivo (sem extensão): ");
    ler_string(nomearq, sizeof(nomearq));
    strcat(nomearq, ".txt");

    FILE *arqtxt = fopen(nomearq, "w");
    if (!arqtxt) {
        printf("Erro ao criar arquivo.\n");
        return;
    }

    fprintf(arqtxt, "RELATÓRIO DE FUNCIONÁRIOS\n\n");
    fprintf(arqtxt, "COD %-25s %-20s %-20s STATUS\n",
            "NOME", "CARGO", "DEPARTAMENTO");
    fprintf(arqtxt, "------------------------------------------------------------------------\n");

    total = tamanho(arq);

    for (i = 0; i < total; i++) {
        fseek(arq, i * sizeof(reg), SEEK_SET);
        fread(&func, sizeof(reg), 1, arq);

        strcpy(status_str, func.status == '*' ? "EXCLUIDO" : "ATIVO");

        fprintf(arqtxt, "%03d %-25s %-20s %-20s %s\n",
                i + 1,
                func.nome,
                func.cargo,
                func.depto,
                status_str);
    }

    fclose(arqtxt);
    printf("Arquivo '%s' gerado com sucesso!\n", nomearq);
}

/* ====================================================================================
   Exclusão Lógica
   ==================================================================================== */
void excluir(FILE *arq) {
    int nr;
    char confirma;
    reg func;

    printf("\nCódigo do funcionário para excluir: ");
    if (scanf("%d", &nr) != 1) {
        printf("Entrada inválida.\n");
        limpa_buffer();
        return;
    }
    limpa_buffer();

    int total = tamanho(arq);
    if (nr <= 0 || nr > total) {
        printf("Código inválido.\n");
        return;
    }

    long pos = (long)(nr - 1) * sizeof(reg);
    fseek(arq, pos, SEEK_SET);
    fread(&func, sizeof(reg), 1, arq);

    if (func.status == '*') {
        printf("Registro já estava excluído.\n");
        return;
    }

    printf("Confirmar exclusão (s/n)? ");
    if (scanf("%c", &confirma) != 1) {
        printf("Entrada inválida.\n");
        limpa_buffer();
        return;
    }
    limpa_buffer();

    if (toupper(confirma) == 'S') {
        func.status = '*';
        fseek(arq, pos, SEEK_SET);
        fwrite(&func, sizeof(reg), 1, arq);
        fflush(arq);
        printf("Funcionário excluído!\n");
    } else {
        printf("Exclusão cancelada.\n");
    }
}

/* -------------------------------------------------------------------------------- */
void configurar_locale(void) {
#if defined(_WIN32)
    system("chcp 65001 > nul");
#endif

    const char *locais[] = {
        "pt_BR.UTF-8",
        "pt_BR.utf8",
        "Portuguese_Brazil.1252",
        "Portuguese",
        ""
    };
    int i;
    for (i = 0; i < 5; i++) {
        if (setlocale(LC_ALL, locais[i]) != NULL) {
            return;
        }
    }
    printf("Aviso: Locale não pôde ser configurado.\n");
}

/* ====================================================================================
   main
   ==================================================================================== */
int main(void) {
    configurar_locale();

    FILE *arq = fopen("funcionarios.dat", "r+b");
    if (!arq) {
        arq = fopen("funcionarios.dat", "w+b");
        if (!arq) {
            printf("Erro ao abrir arquivo.\n");
            return 1;
        }
    }

    int op;
    do {
        printf("\n=========== CADASTRO DE FUNCIONÁRIOS ===========\n");
        printf("1. Cadastrar funcionário\n");
        printf("2. Consultar funcionário\n");
        printf("3. Gerar relatório texto\n");
        printf("4. Excluir funcionário\n");
        printf("5. Sair\n");
        printf("----------------------------------------------\n");
        printf("Total de registros: %d\n", tamanho(arq));
        printf("Opção: ");

        if (scanf("%d", &op) != 1) {
            printf("Digite um número válido.\n");
            limpa_buffer();
            continue;
        }
        limpa_buffer();

        switch (op) {
            case 1: cadastrar(arq); break;
            case 2: consultar(arq); break;
            case 3: gerar_arquivo_texto(arq); break;
            case 4: excluir(arq); break;
            case 5: printf("Saindo...\n"); break;
            default: printf("Opção inválida!\n");
        }
    } while (op != 5);

    fclose(arq);
    return 0;
}
